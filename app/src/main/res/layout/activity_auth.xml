<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7E8F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Заголовок -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Авторизація"
            android:textSize="24sp"
            android:fontFamily="@font/montserrat"
            android:textStyle="normal"
            android:textColor="#000000"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="24dp"
            />

        <!-- Поле логіну -->
        <EditText
            android:id="@+id/user_login_auth"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="Введіть email"
            android:background="@drawable/input_bg"
            android:paddingHorizontal="16dp"
            android:textColorHint="#9E9E9E"
            android:textColor="#000000"
            />

        <!-- Поле паролю -->
        <EditText
            android:id="@+id/user_password_auth"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:hint="Введіть пароль"
            android:inputType="textPassword"
            android:background="@drawable/input_bg"
            android:paddingHorizontal="16dp"
            android:textColorHint="#9E9E9E"
            android:textColor="#000000"
            android:layout_marginTop="15dp"
            />

        <!-- Кнопка -->
        <Button
            android:id="@+id/button_auth"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="#8CC7C5E2"
            android:fontFamily="@font/montserrat"
            android:text="Увійти"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_gravity="center" />

        <!-- Нижній текст -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="У мене немає аккаунту, "
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/link_reg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:text="зареєструватися"
                android:textColor="#B41A1A"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>


